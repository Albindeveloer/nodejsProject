<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
       <hr style="height:3px; border:none; color:rgb(19, 61, 199); background-color:rgb(24, 201, 171);">
     <h1><B>ADMIN LOGIN</B></h1> 
      <hr style="height:3px; border:none; color:rgb(19, 61, 199); background-color:rgb(24, 201, 171);"><br><br>
      {{#if loginErr}}
        <small class="error text-danger">{{loginErr}}</small>
      {{/if}}
      <form action="admin/admin-login" method="post">
        <div class="form-group">
          <label>Email Address</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter email"
            name="email"
          />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            class="form-control"
            placeholder="Enter Password"
            name="password"
          />
        </div>
        {{!-- <a href="/admin/admin-signup">Create a new account ?</a> --}}
        <button type="submit" class="btn btn-primary float-right">login</button>
      </form><br><br>
      <hr style="height:3px; border:none; color:rgb(69, 226, 108); background-color:rgb(20, 204, 195);">
      <hr style="height:3px; border:none; color:rgb(69, 226, 108); background-color:rgb(20, 204, 195);">
    </div>
    
  </div>
</div>